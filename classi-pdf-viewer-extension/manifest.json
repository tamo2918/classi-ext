{
  "manifest_version": 3,
  "name": "Classi PDF Viewer",
  "version": "2.0.0",
  "description": "ClassiのPDFをダウンロードせずにブラウザ内で表示します",
  "permissions": [
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://platform.classi.jp/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://platform.classi.jp/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
